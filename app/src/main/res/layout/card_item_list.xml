<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#A6FFEF"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6FFEF">

        <ImageView
            android:id="@+id/imageViewBullet"
            android:layout_marginVertical="4dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/bullet" />

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Burgers"
            android:textColor="#000000"
            android:layout_marginLeft="8sp"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBullet"
            app:layout_constraintStart_toEndOf="@+id/imageViewBullet"
            app:layout_constraintTop_toTopOf="@+id/imageViewBullet" />

        <TextView
            android:id="@+id/textViewItemQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginRight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBullet"
            app:layout_constraintEnd_toStartOf="@id/checkboxPicked"
            app:layout_constraintTop_toTopOf="@+id/imageViewBullet" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkboxPicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBullet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewBullet"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>