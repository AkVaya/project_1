<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/bullet" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paras Singh"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6" />
        <TextView
            android:id="@+id/textViewWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Delivery"
            android:textSize="12dp"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@id/textViewName" />

        <Switch
            android:id="@+id/switchDelivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:switchPadding="8dp"
            android:text="Reached"
            android:background="@drawable/label_bg"
            android:textColor="#000000"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            app:layout_constraintStart_toStartOf="@+id/textViewWork"
            app:layout_constraintTop_toBottomOf="@+id/textViewWork"/>

        <Button
            android:id="@+id/buttonTrack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tracking"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@id/imageViewCall"
            app:layout_constraintTop_toTopOf="@+id/textViewName" />
        <ImageView
            android:id="@+id/imageViewCall"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/call"
            android:scaleType="fitCenter"
            android:background="@drawable/label_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewName" />

        <Button
            android:id="@+id/buttonIReached"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:background="@drawable/label_bg"
            android:text="on my way"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCall" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>